.use-motion {
  .post { opacity: 1; }
}

.page-archive {

  .archive-page-counter {
    position: relative;
    top: 3px;
    left: 20px;

    +mobile() {
      top: 5px;
    }
  }

  .posts-collapse {
    position: relative;

    &::after {
      top: 20px;
      left: 0;
      margin-left: -2px;
      width: 4px;
      height: 100%;
      background: $timeline-color;
      z-index: $zindex-bottom;
    }

    .archive-move-on {
      position: absolute;
      top: 11px;
      left: 0;
      margin-left: -6px;
      width: 10px;
      height: 10px;
      opacity: 0.5;
      background: $history-circle-top;
      border: 1px solid $history-circle-top;

      circle();
    }

    &::before, &::after {
      content: " ";
      position: absolute;
    }
  }
}
